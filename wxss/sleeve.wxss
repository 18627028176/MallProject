/*点击动画的样式,自定义组件使用不能放入app.json设置全局样式*/
.rect-hover{
    position: relative;
    top: 3rpx;
    left: 3rpx;
    box-shadow: 0px 0px 8px rgba(0,0,0,.1) inset;
}

/*点击有缩放效果*/
.small-hover{
    opacity: 0.9;
    transform: scale(0.95,0.95);
}

/*点击有小缩放的效果*/
.medium-hover{
    opacity: 0.8;
    transform: scale(0.85,0.85);
}