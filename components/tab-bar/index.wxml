<view class="container">

    <view class="icons">
        <view bind:tap="onGoToHome">
            <l-icon name="home" size="40" l-class="sleeve"></l-icon>
            <text>首页</text>
        </view>

        <view bind:tap="onGoToCart">
<!--            <l-icon name="cart" size="46" color="#157658"></l-icon>-->
            <!-- badge是lin-ui提供数量信息提示的插槽,shape="circle"设置是随内容大小而改变 -->
            <l-badge shape="circle" l-class="badge" value="71">
                <l-icon name="shopping" size="40" l-class="sleeve"></l-icon>
            </l-badge>
            <text>购物车</text>
        </view>
    </view>
    <view bind:tap="onAddToCart" class="cart btn-font">
        <text>加入购物车</text>
    </view>

    <view bind:tap="onBuy" class="buy btn-font">
        <text>立即购买</text>
    </view>
</view>