<wxs src="../../wxs/price.wxs" module="p"></wxs>

<view data-pid="{{data.id}}" bind:tap="onItemTap" class="container">
    <!-- image可以加属性mode="widthFix",设置图片宽度不变，高度自由变化，保持原图宽高不变   -->
    <image class="img" mode="widthFix" src="{{data.img}}"></image>
    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}" wx:key="{{index}}">
<!--                type="reading"设置标签随内部字符串改变宽度 -->
                <l-tag type="reading" l-class="l-tag" size="super-mini">{{item}}</l-tag>
            </block>
        </view>
        <view class="price-row">
            <l-price color="#157658"
                     value-size="28"
                     unit-size="20"
                     aotufix
                     value="{{p.mainPrice(data.price,data.discount_price)}}"></l-price>
            <l-price wx:if="{{data.discount_price?true:false}}"
                     color="#999999"
                     size="26"
                     l-class="discount-price"
                     deleted
                     value="{{p.slashedPrice(data.price,data.discount_price)}}"></l-price>
        </view>
        <text class="subtitle">{{data.subtitle}}</text>
    </view>
</view>
