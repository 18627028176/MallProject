<view class="container">
    <image class="title" src="{{banner.img}}"></image>
    <view class="inner-container">
<!--        hover-class:设置点击动画的样式类    hover-stay-time:持续时间-->
        <view hover-class="rect-hover" hover-stay-time="300">
            <image class="left" src="{{left.img}}"></image>
        </view>
        <view class="right-container">
            <image class="right-size" src="{{rightTop.img}}"></image>
            <image class="right-size" src="{{rightBottom.img}}"></image>
        </view>
    </view>
</view>